<Window x:Class="Telega_RPC.AllowedUsersAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telega_RPC"
        mc:Ignorable="d"
        Title="Telega RPC - add user" Height="200" Width="400"
        Closing="Window_Closing"
        >
    <Grid>
        <Label Content="Username or Chat ID" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top"/>
        <TextBox Name="user_id_checkbox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Margin="0,74,0,0"/>
        <Button Name="user_id_ok_button" Content="Ok" HorizontalAlignment="Center" Margin="0,97,0,0" VerticalAlignment="Top" Width="74" Click="user_id_ok_button_Click"/>

    </Grid>
</Window>
